  <script>
    function toggleSidebar() {
      document.getElementById('sidebar').classList.toggle('collapsed');
    }

    function navigate(page) {
      const content = document.getElementById('content');
      switch (page) {
        case 'dashboard':
          content.innerHTML = `
            <div class="box">
              <h3>My Team</h3>
              <p>Overview of your team members.</p>
            </div>
            <div class="box">
              <h3>Update My Status</h3>
              <select>
                <option>Select Status</option>
                <option>On Duty</option>
                <option>Off Duty</option>
                <option>Break</option>
              </select>
              <div class="map">[Map Placeholder]</div>
            </div>`;
          break;
        case 'task':
          content.innerHTML = `
            <div class="box">
              <h3>Task Page</h3>
              <p>List and manage your active assignments.</p>
            </div>`;
          break;
        case 'activity':
          content.innerHTML = `
            <div class="box">
              <h3>Activity Log</h3>
              <p>Recent patrol activities and reports.</p>
            </div>`;
          break;
        case 'feed':
          content.innerHTML = `
            <div class="box">
              <h3>Officer Feed</h3>
              <p>News and bulletins for MPS personnel.</p>
            </div>`;
          break;
        case 'place':
          content.innerHTML = `
            <div class="box">
              <h3>Place Confirmation</h3>
              <p>Confirm duty locations or checkpoints.</p>
            </div>`;
          break;
        case 'vehicle':
          content.innerHTML = `
            <div class="box">
              <h3>Vehicle Inspection</h3>
              <p>Log and inspect assigned vehicles.</p>
            </div>`;
          break;
        case 'logout':
          content.innerHTML = `
            <div class="box">
              <h3>Logged Out</h3>
              <p>You have been logged out. Close browser to exit securely.</p>
            </div>`;
          break;
        default:
          content.innerHTML = `<div class="box"><p>Page not found.</p></div>`;
      }
    }

    // Load default page
    navigate('dashboard');
  </script>

